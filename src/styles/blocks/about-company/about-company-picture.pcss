.about-company-slider-picture, .about-company-slider-picture__item {
  width: 100%;
  height: 100%;

  .slick-list, .slick-track {
    width: 100%;
    height: 100%;
  }

  .slick-slide {
    & div:only-child {
      height: 100%;
    }
  }
}

.about-company-slider-picture__img {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center top;
  width: 100%;
  height: 100%;
}
