.total {
  width: 100%;
  height: 100%;
  padding: 10%;
}

.total__title {
  font-weight: bold;
  font-size: 19px;
  line-height: 25px;
  color: $secondary;
}

.total__info {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18px;
  align-items: center;
  margin-top: 23px;
}

.total__info__name {
  color: $secondary;
  line-height: 21px;
}