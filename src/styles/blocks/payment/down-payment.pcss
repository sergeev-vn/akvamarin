.down-payment {
  cursor: pointer;
  line-height: 21px;
  position: relative;

  .ui-slider-horizontal {
    background-color: #464646;
    height: 3px;
    width: 100%;
  }

  .ui-slider-handle {
    background: $main;
    border: 3px solid $secondary;
    width: 29px;height: 29px;
    border-radius: 50%;
    top: 50%;
    transform: translateY(-50%);
    outline: none;
    cursor: pointer;
  }
}

.down-payment__current {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 105%;
  display: flex;

  &::after {
    content: 'â‚½';
    margin-left: 5px;
  }
}

.down-payment__min,
.down-payment__max {
  position: absolute;
  bottom: -25px;
}

.down-payment__min {
  left: 0;
}

.down-payment__max {
  right: 0;
}